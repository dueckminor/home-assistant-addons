{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Gateway",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/tools/gateway/gateway.go",
            "envFile": "${workspaceFolder}/gen/data/env.txt",
            "preLaunchTask": "build-web-fast",
            "args": [
                "--data=${workspaceFolder}/gen/data/gateway",
                "--dns-port=10053",
                "--http-port=10080",
                "--https-port=10443",
                "--debug",
            ]
        },
        {
            "name": "Launch Gateway (serve)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/tools/gateway/gateway.go",
            "envFile": "${workspaceFolder}/gen/data/env.txt",
            "preLaunchTask": "serve",
            "args": [
                "--data=${workspaceFolder}/gen/data/gateway",
                "--dist-auth=http://localhost:3000",
                "--dist-gateway=http://localhost:3001",
                "--dns-port=10053",
                "--http-port=10080",
                "--https-port=10443",
                "--debug",
            ],
        },
        {
            "name": "Launch Security",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/tools/security/security.go",
            "preLaunchTask": "serve",
            "args": [
                "--data=${workspaceFolder}/gen/data/security",
                "--dist=http://localhost:3002",
                "--http-port=30080",
                "--ftp-port=30021"
            ]
        },
        {
            "name": "Launch MQTT-Bridge",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/tools/mqtt-bridge/mqtt-bridge.go",
            "args": [
                "--data-dir=${workspaceFolder}/gen/data/mqtt-bridge",
                "--admin-port=31080",
                "--dist-admin=http://localhost:3003"
            ]
        },

    ]
}